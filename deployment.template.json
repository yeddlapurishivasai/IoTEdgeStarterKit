{
    "$schema-template": "2.0.0",
    "modulesContent": {
      "$edgeAgent": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "runtime": {
            "type": "docker",
            "settings": {
              "minDockerVersion": "v1.25",
              "loggingOptions": "",
              "registryCredentials": {
                "acr": {
                  "username": "${ACR_USER}",
                  "password": "${ACR_PASSWORD}",
                  "address": "${ACR_ADDRESS}"
                }
              }
            }
          },
          "systemModules": {
            "edgeAgent": {
              "type": "docker",
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
                "createOptions": ""
              }
            },
            "edgeHub": {
              "type": "docker",
              "status": "running",
              "restartPolicy": "always",
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
                "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"443/tcp\":[{\"HostPort\":\"443\"}],\"5671/tcp\":[{\"HostPort\":\"5671\"}],\"8883/tcp\":[{\"HostPort\":\"8883\"}]}}}"
              }
            }
          },
          "modules": {
            "thumbnailconvertermodule": {
              "version": "1.0",
              "type": "docker",
              "status": "running",
              "restartPolicy": "always",
              "startupOrder": 1,
              "settings": {
                "image": "${MODULES.thumbnailconvertermodule}",
                "createOptions": "{\"HostConfig\":{\"Mounts\":[{\"Source\":\"/storage/images/input\",\"Target\":\"/var/input\",\"Type\":\"bind\"}]}}"
              }
            }
           }
        }
      },
      "$edgeHub": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "routes": {
            "thumbnailconvertermodule": "FROM /messages/modules/thumbnailconvertermodule/outputs/eventqueue INTO $upstream"
          },
          "storeAndForwardConfiguration": {
            "timeToLiveSecs": 7200
          }
        }
      },
      "thumbnailconvertermodule": {
        "properties.desired": {
            "processTimeInMinutes" : 5
        }
      }
    }
  }